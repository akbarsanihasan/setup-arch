#!/usr/bin/env bash

app=$1
shift

if command -v "$app" &>/dev/null; then
	"$app" "$@"
	exit 0
fi

if command -v flatpak &>/dev/null && flatpak run "$app" "$@"; then
	exit 0
fi

echo -e "Failed opening $app, could not find in the path"
notify-send "Open app" "Failed opening $app, could not find in the path"
