{
    "layer": "bottom",
    "position": "bottom",
    "reload_style_on_change": true,
    "modules-left": [
        "custom/powermenu",
        "sway/window",
        "custom/terminal",
        "custom/browser",
        "custom/notes",
    ],
    "modules-right": [
        "sway/language",
        "network#upspeed",
        "network#downspeed",
        "disk",
        "memory",
        "cpu",
        "custom/fence",
        "tray",
        "custom/swayidle",
        "keyboard-state",
        "bluetooth",
        "network",
        "group/audio",
        "custom/battery",
        "clock",
        "custom/notification",
    ],
    "custom/powermenu": {
        "format": "󰼁",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power-menu.xml",
        "menu-actions": {
            "suspend": "swaynag -m \"Are you sure you want to suspend ?\" -z \" Confirm \" \" suspend \" -s \" Cancel \" -t catppuccin",
            "reboot": "swaynag -m \"Are you sure you want to reboot ?\" -z \" Confirm \" \" reboot \" -s \" Cancel \" -t catppuccin",
            "poweroff": "swaynag -m \"Are you sure you want to poweroff ?\" -z \" Confirm \" \" poweroff \" -s \" Cancel \" -t catppuccin",
            "lock": "~/.local/bin/lock",
            "logout": "swaynag -m \"Are you sure you want to logout ?\" -z \" Confirm \" \" swaymsg exit \" -s \" Cancel \" -t catppuccin",
        },
    },
    "custom/terminal": {
        "format": "Terminal",
        "tooltip": false,
        "on-click": "swaymsg workspace 2",
    },
    "custom/browser": {
        "format": "Browser",
        "tooltip": false,
        "on-click": "swaymsg workspace 9",
    },
    "custom/notes": {
        "format": "Documents",
        "tooltip": false,
        "on-click": "swaymsg workspace 10",
    },
    "sway/window": {
        "format": "{app_id}",
    },
    "sway/language": {
        "format": "<span>{long} <big>󰌌</big></span>",
    },
    "sway/workspaces": {
        "all-outputs": true,
        "current-only": true,
        "sort-by-number": true,
        "format": "{index}",
    },
    "network#upspeed": {
        "interval": 10,
        "format": "<span>{bandwidthUpBytes} <big></big></span>",
    },
    "network#downspeed": {
        "interval": 10,
        "format": "<span>{bandwidthDownBytes} <big></big></span>",
    },
    "disk": {
        "interval": 30,
        "format": "<span>{percentage_free}% <big>󰨣</big></span>",
        "max-length": 10,
        "tooltip-format": "Available ~ {free}",
    },
    "memory": {
        "interval": 30,
        "format": "<span>{}% <big>󰍛</big></span>",
        "max-length": 10,
    },
    "cpu": {
        "interval": 10,
        "format": "<span>{usage}% <big>󰻠</big></span>",
        "max-length": 10,
    },
    // Right
    "tray": {
        "show-passive-item": true,
        "reverse-direction": true,
        "expand": true,
    },
    "keyboard-state": {
        "numlock": false,
        "capslock": true,
        "binding-keys": [58, 1, 70],
        "format": {
            "capslock": "<span><big>{icon}</big></span>",
        },
        "format-icons": {
            "locked": "󰘲",
            "unlocked": "",
        },
    },
    "custom/swayidle": {
        "format": "{}",
        "exec": "~/.local/bin/idle icon",
        "exec-if": "bash -c 'which swayidle &>/dev/null'",
        "interval": 8,
        "signal": 9,
    },
    "network": {
        "format": "<span><big>{icon}</big></span>",
        "format-disabled": "<span><big></big></span>",
        "format-icons": {
            "disconnected": "",
            "ethernet": "󰈀",
            "wifi": ["󰤟", "󰤢", "󰤥", "󰤨"],
        },
        "tooltip-format": "{ifname} via {gwaddr} {icon}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) {icon}",
        "tooltip-format-ethernet": "{ifname} {icon}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/network-menu.xml",
        "menu-actions": {
            "settings": "nm-connection-editor",
            "enable": "nmcli radio wifi on",
            "disable": "nmcli radio wifi off",
        },
    },
    "bluetooth": {
        "format": "<span><big>󰂯</big></span>",
        "format-connected": "<span><big>󰂱</big></span>",
        "format-no-controller": "<span><big>󰂯</big></span>",
        "tooltip-format": "{device_alias} {device_battery_percentage}%",
        "menu": "on-click",
        "menu-file": "~/.config/waybar/bluetooth-menu.xml",
        "menu-actions": {
            "settings": "blueman-manager",
            "enable": "bluetoothctl power on",
            "disable": "bluetoothctl power off",
        },
    },
    "pulseaudio": {
        "format": "{volume}% ",
        "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol -t 3",
        "on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_SINK@ 5%+",
        "on-scroll-down": "wpctl set-volume -l 1.5 @DEFAULT_SINK@ 5%-",
        "reverse-scrolling": true,
        "reverse-mouse-scrolling": true,
    },
    "pulseaudio#icon": {
        "format": "<span><big></big></span>",
        "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol -t 3",
        "on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_SINK@ 5%+",
        "on-scroll-down": "wpctl set-volume -l 1.5 @DEFAULT_SINK@ 5%-",
        "reverse-scrolling": true,
        "reverse-mouse-scrolling": true,
    },
    "group/audio": {
        "orientation": "horizontal",
        "modules": ["pulseaudio#icon", "pulseaudio"],
        "drawer": {
            "transition-left-to-right": false,
        },
    },
    "custom/fence": {
        "format": "┆",
        "tooltip": false,
    },
    "custom/battery": {
        "format": "<span><big>{icon}</big></span> <span rise='0.8pt'>{text}%</span>",
        "exec": "~/.local/bin/battery wayindicator",
        "format-icons": ["", "", "", "", ""],
        "return-type": "json",
        "interval": 8,
        "states": {
            "warning": 15,
            "critical": 8,
        },
        "menu": "on-click",
        "menu-file": "~/.config/waybar/battery-menu.xml",
        "menu-actions": {
            "tshd-start": "~/.local/bin/battery tshd start",
            "tshd-stop": "~/.local/bin/battery tshd stop",
        },
    },
    "clock": {
        "interval": 60,
        "format": "{:%a %d %Y %H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "format": {
                "months": "<span color='#b4befe'><b>{}</b></span>",
                "days": "<span color='#7f849c'><b>{}</b></span>",
                "weekdays": "<span color='#b4befe'><b>{}</b></span>",
                "today": "<span color='#b4befe'><b><i>{}</i></b></span>",
            },
        },
        "actions": {
            "on-click-middle": "mode",
            "on-scroll-up": "tz_up",
            "on-scroll-down": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down",
        },
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
    },
    "custom/notification": {
        "exec": "swaync-client -swb",
        "exec-if": "bash -c 'which swaync-client &>/dev/null'",
        "format": "<span><b>{icon}</b></span>",
        "return-type": "json",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true,
        "tooltip": false,
        "format-icons": {
            "notification": "󱅫",
            "none": "󰂚",
            "dnd-notification": "󰂛",
            "dnd-none": "",
            "inhibited-notification": "󰂚",
            "inhibited-none": "",
            "dnd-inhibited-notification": "",
            "dnd-inhibited-none": "",
        },
    },
}
